# Atlantic Proxy Environment Variables

# Oxylabs API Configuration
OXYLABS_API_KEY=your_api_key_here
OXYLABS_NETWORK_ID=your_network_id_here
OXYLABS_ENDPOINT=https://realtime.oxylabs.io/v1/queries

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atlantic_proxy
DB_USER=atlantic_user
DB_PASSWORD=your_db_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Server Configuration (API & Dashboard Backend)
SERVER_PORT=8082
SERVER_HOST=localhost
SERVER_ENV=development

# Stripe Configuration (for production)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m